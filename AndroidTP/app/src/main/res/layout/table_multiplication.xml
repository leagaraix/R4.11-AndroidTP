<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercice5Activity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/exercice5_multiplication1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercice5_multiplication"/>

        <EditText
            android:id="@+id/exercice5_guess1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/exercice5_multiplication2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercice5_multiplication"/>

        <EditText
            android:id="@+id/exercice5_guess2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/exercice5_multiplication3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercice5_multiplication"/>

        <EditText
            android:id="@+id/exercice5_guess3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>

</RelativeLayout>